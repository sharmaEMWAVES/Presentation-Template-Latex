%% =====================================
%% Footer
%%
\defbeamertemplate*{footline}{infolines theme}
{%
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=.9\paperwidth,ht=3.5mm,dp=1.0ex,right]{first box in footer}%
    \centering
    \raisebox{0.5mm}{\usebeamerfont{title in head/foot}\textit{\insertshorttitle}}
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.1\paperwidth,ht=3.5mm,dp=1.0ex,right]{second box in footer}%
    \centering
        \raisebox{0.5mm}{%
          \tiny\insertframenumber{} / \inserttotalframenumber%
          %\addtocounter{framenumber}{-1}
        }
    \end{beamercolorbox}%
  }%
  \vskip0pt%
}


\setbeamertemplate{enumerate items}[circle]
\setbeamercolor{item projected}{bg=color1,fg=white}
\setbeamercolor{itemize item}{fg=color1, bg=white}
% item indentation
\setlength{\leftmargini}{0.5cm}
\setlength{\leftmarginii}{0.5cm}

